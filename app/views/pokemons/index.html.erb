<h1>Pokemons</h1>

<div class="container" >
<div id="pokemons">
<div class="cards">
    <% @pokemons.each do |pokemon| %>
    <div class="card-<%= pokemon.typ %>">
      <% if pokemon.photo.attached? %>
        <%= cl_image_tag pokemon.photo.key, class:"card-img" %>
      <% end %>
        <div class="card-body">
        <h5 class="card-title"><%= pokemon.name %></h5>
        <p class="card-text"> Type : <%= pokemon.typ %></p>
        <p class="card-text"> Trainer : <%= pokemon.user.username %> </p>
        <%= link_to "Show pokemon", pokemon, class:"btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>
</div>
